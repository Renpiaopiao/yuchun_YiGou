<!--pages/category/category.wxml-->
<view class="contain">
	<search></search>
	<view class="scrollcon">
		<scroll-view class="leftcon" scroll-y>
			<view class="name" wx:for="{{lefttitle}}">{{item}}</view>
		</scroll-view>
		<scroll-view class="rightcon" scroll-y>
			<view class="group" wx:for="{{rightcontent}}" wx:for-item="item1" wx:for-index="index1">
				<view class="title">{{item1.cat_name}}</view>
				<view class="list">
					<navigator class="listnavi" wx:for="{{item1.children}}" wx:key="cat_id"
					wx:for-item="item2" wx:for-index="index2">
						<image src="{{item2.cat_icon}}" mode="widthFix"></image>
						<view class="goodsname">{{item2.cat_name}}</view>
					</navigator>
				</view>
			</view>
		</scroll-view>
	</view>
</view>